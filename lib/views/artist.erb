<h2> <%= @artist[0][:creator] %> </h2>

<div class="container">
  <br>
    <div id="artists" class="row list-group">

        <% @artist.each do |album| %>

          <div class="item  col-xs-4 col-lg-4">
              <div class="thumbnail">
                  <div class="caption">
                      <h4 class="group inner list-group-item-heading">
                          <a href="http://localhost:4567/album/<%= album[:id] %>"><%= album[:title] %></a></h4>
                  </div>
              </div>
          </div>

        <% end %>
    </div>
</div>
